<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/btn_profile_quit_for_sure_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_quit_for_sure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingVertical="12dp"
            android:text="@string/profile_quit_for_sure_tv_title"
            android:textAppearance="?textAppearanceSubtitle1"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/btn_profile_quit_for_sure_back"
            app:layout_constraintTop_toTopOf="@id/btn_profile_quit_for_sure_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_profile_manage_for_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="84dp">

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_subtitle_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:text="@string/profile_quit_for_sure_tv_subtitle_1"
                    android:textAppearance="?textAppearanceSubtitle1"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_subtitle_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/profile_quit_for_sure_tv_subtitle_2"
                    android:textAppearance="?textAppearanceBodySmall"
                    android:textColor="@color/grayscales_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_subtitle_1" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_reason_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72dp"
                    android:paddingVertical="4dp"
                    android:text="@string/profile_quit_for_sure_tv_reason_1"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_subtitle_2" />

                <ImageView
                    android:id="@+id/iv_profile_quit_for_sure_reason_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="42dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_quit_for_sure_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_reason_1" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_reason_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:paddingVertical="4dp"
                    android:text="@string/profile_quit_for_sure_tv_reason_2"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_quit_for_sure_reason_1" />

                <ImageView
                    android:id="@+id/iv_profile_quit_for_sure_reason_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="42dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_quit_for_sure_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_reason_2" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_reason_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:paddingVertical="4dp"
                    android:text="@string/profile_quit_for_sure_tv_reason_3"
                    android:textAppearance="?textAppearanceBodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_quit_for_sure_reason_2" />

                <ImageView
                    android:id="@+id/iv_profile_quit_for_sure_reason_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="42dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_quit_for_sure_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_reason_3" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:gravity="center"
                    android:text="@string/profile_quit_for_sure_tv_rule"
                    android:textAppearance="?textAppearanceLabelMedium"
                    android:textColor="@color/grayscales_600"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_quit_for_sure_reason_3" />

                <TextView
                    android:id="@+id/btn_profile_quit_for_sure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_grayscales700_line_8_rect"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:text="@string/profile_quit_for_sure_btn"
                    android:textColor="@color/semantic_red_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_rule" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>