<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.event.reward.RewardDialog">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_reward"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_grayscales900_fill_10_rect"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_reward_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="38dp"
                android:paddingVertical="3dp"
                android:text="@string/reward_title"
                android:textAppearance="@style/TextAppearance.Yello.Subtitle01"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_reward_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingVertical="2dp"
                android:text="@string/reward_subtitle"
                android:textAppearance="@style/TextAppearance.Yello.LabelLarge"
                android:textColor="@color/grayscales_400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reward_title" />

            <!-- TODO : 이미지 연결 후 tools 제거 -->
            <ImageView
                android:id="@+id/iv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_notice_dummy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reward_subtitle"
                tools:layout_height="200dp"
                tools:layout_width="200dp"
                tools:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_reward_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="19dp"
                android:paddingHorizontal="118dp"
                android:layout_marginTop="12dp"
                android:text="@string/reward_confirm"
                android:textAppearance="@style/TextAppearance.Yello.BodySmall"
                android:textColor="@color/grayscales_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_reward" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>