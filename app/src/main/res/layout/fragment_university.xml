<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.el.yello.presentation.onboarding.activity.OnBoardingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_university"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/btn_universityinfo_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:background="@null"
            android:src="@drawable/ic_onboarding_btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/universityInfo_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:max="100"
            android:progress="16"
            android:progressDrawable="@drawable/layerlist_onboarding_progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_universityinfo_back_btn"
            app:layout_constraintWidth_percent="1" />

        <TextView
            android:id="@+id/tv_university_where"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/onboarding_tv_what_school"
            android:textAppearance="?textAppearanceHeadline2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="@id/universityInfo_progressbar" />

        <TextView
            android:id="@+id/tv_university_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@{vm._school.isEmpty() ? @drawable/shape_black_fill_grayscales500_line_8_rect : @drawable/shape_black_fill_grayscales600_line_8_rect}"
            android:hint="@string/onboarding_school_hint"
            android:textAppearance="?textAppearanceBodyLarge"
            android:drawablePadding="12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColorHint="@color/grayscales_700"
            android:maxLines="1"
            android:paddingVertical="18dp"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_onboarding_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_university_where" />

        <TextView
            android:id="@+id/tv_department_where"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/onboarding_tv_what_department"
            android:textAppearance="?textAppearanceHeadline2"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_university_search" />

        <TextView
            android:id="@+id/tv_department_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:background="@{vm._department.isEmpty() ?@drawable/shape_black_fill_grayscales500_line_8_rect : @drawable/shape_black_fill_grayscales600_line_8_rect}"
            android:hint="@string/onboarding_department_hint"
            android:fontFamily="@font/font_pretendard_medium"
            android:textSize="16sp"
            android:textColorHint="@color/grayscales_700"
            android:paddingVertical="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_onboarding_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_department_where" />

        <TextView
            android:id="@+id/tv_studentid_what"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:text="@string/onboarding_tv_what_studentid"
            android:textAppearance="?textAppearanceHeadline2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_department_search" />

        <TextView
            android:id="@+id/tv_studentid_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@{vm._studentId == null ? @drawable/shape_black_fill_grayscales500_line_8_rect : @drawable/shape_black_fill_grayscales600_line_8_rect}"
            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="center_vertical"
            android:hint="@string/onboarding_tv_hint_select_studentid"
            android:paddingVertical="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grayscales_700"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_onboarding_studentid_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_studentid_what"
            tools:background="shape_black_fill_grayscales600_line_8_rect" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_universityinfo_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:background="@{vm._school.isEmpty() || vm._department.isEmpty() || vm._studentId == null ? @drawable/shape_grayscales_800_fill_100_rect : @drawable/shape_yello_main_500_fill_100_rect}"
            android:clickable="@{!vm._school.isEmpty() &amp; !vm._department.isEmpty() &amp; vm._studentId != null }"
            android:paddingVertical="12dp"
            android:text="@string/onboarding_btn_next"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="@{vm._school.isEmpty() || vm._department.isEmpty()|| vm._studentId == null? @color/grayscales_700 : @color/black}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>