<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.el.yello.presentation.onboarding.activity.OnBoardingViewModel" />
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_studentid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/btn_nameid_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_onboarding_btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="68dp"
            android:text="@string/onboarding_tv_name"
            android:textAppearance="?textAppearanceHeadline2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@{vm.isValidName() ? @drawable/sel_onbarding_editext_focus : @drawable/shape_fill_red20_line_semantic_status_red500_rect_8}"
            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="center_vertical"
            android:hint="@string/name_id_name_hint"
            android:inputType="text"
            android:maxLines="1"
            android:paddingVertical="18dp"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:text="@={vm._name}"
            android:textColor="@color/white"
            android:textColorHint="@color/grayscales_600"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <ImageView
            android:id="@+id/btn_name_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:background="@{vm.isValidName() ? @drawable/ic_onboarding_delete : @drawable/ic_onboarding_delete_red}"
            android:visibility="@{vm._name.isBlank() ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/et_name"
            app:layout_constraintEnd_toEndOf="@id/et_name"
            app:layout_constraintTop_toTopOf="@+id/et_name"
            tools:background="@drawable/ic_onboarding_delete" />

        <TextView
            android:id="@+id/tv_name_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="2dp"
            android:text="@{vm.isValidName() ? @string/onboarding_tv_name_description : @string/name_id_hangul_error}"
            android:textAppearance="?textAppearanceLabelLarge"
            android:textColor="@{vm.isValidName() ? @color/grayscales_500 : @color/semantic_red_500}"
            app:layout_constraintEnd_toEndOf="@id/et_name"
            app:layout_constraintStart_toStartOf="@id/et_name"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            tools:text="@string/onboarding_tv_name_description"
            tools:textColor="@color/grayscales_500" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/onboarding_tv_id"
            android:textAppearance="?textAppearanceHeadline2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_error" />


        <TextView
            android:id="@+id/iv_nameid_fix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/onboarding_tv_hint_fix"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/et_id"
            app:layout_constraintStart_toStartOf="@id/et_id"
            app:layout_constraintTop_toTopOf="@+id/et_id" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@{vm.isValidId() ? @drawable/sel_onbarding_editext_focus : @drawable/shape_fill_red20_line_semantic_status_red500_rect_8}"
            android:fontFamily="@font/font_pretendard_medium"
            android:hint="@string/onboarding_et_id"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingVertical="18dp"
            android:paddingStart="39dp"
            android:paddingEnd="20dp"
            android:text="@={vm._id}"
            android:textColor="@color/white"
            android:textColorHint="@color/grayscales_600"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_id" />

        <ImageView
            android:id="@+id/btn_id_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:background="@{vm.isValidId() ? @drawable/ic_onboarding_delete : @drawable/ic_onboarding_delete_red}"
            android:visibility="@{vm._id.isBlank() ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/et_id"
            app:layout_constraintEnd_toEndOf="@id/et_id"
            app:layout_constraintTop_toTopOf="@+id/et_id"
            tools:background="@drawable/ic_onboarding_delete" />

        <TextView
            android:id="@+id/tv_id_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="2dp"
            android:text="@{vm.isValidId() ? @string/name_id_id_description : @string/name_id_id_error}"
            android:textAppearance="?textAppearanceLabelLarge"
            android:textColor="@{vm.isValidId() ? @color/grayscales_500 : @color/semantic_red_500}"
            app:layout_constraintEnd_toEndOf="@id/et_id"
            app:layout_constraintStart_toStartOf="@id/et_id"
            app:layout_constraintTop_toBottomOf="@id/et_id"
            tools:text="@string/name_id_id_description"
            tools:textColor="@color/grayscales_500" />

        <android.widget.Button
            android:id="@+id/btn_nameid_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:background="@{vm.isValidName() &amp; vm.isValidId() &amp; !vm._name.isEmpty() &amp; !vm._id.isEmpty() ? @drawable/shape_yello_main_500_fill_black_line_rect : @drawable/shape_grayscales800_fill_8_rect}"
            android:clickable="@{vm.isValidName() &amp; vm.isValidId() &amp; !vm._name.isEmpty() &amp; !vm._id.isEmpty()}"
            android:paddingVertical="12dp"
            android:text="@string/onboarding_btn_next"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="@{vm.isValidName() &amp; vm.isValidId() &amp; !vm._name.isEmpty() &amp; !vm._id.isEmpty() ? @color/black : @color/grayscales_700}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
