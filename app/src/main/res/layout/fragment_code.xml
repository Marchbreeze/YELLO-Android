<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.yello.presentation.onboarding.activity.OnBoardingViewModel" />
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            android:text="@string/onboarding_tv_code"
            android:textAppearance="?textAppearanceHeadline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_code_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/onboarding_tv_code_skip"
            android:textAppearance="?textAppearanceBodySmall"
            android:textColor="@color/grayscales_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/iv_code_fix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:textColor="@color/white"
            android:text="\@"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/et_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_code" />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/font_pretendard_medium"
            android:hint="@string/onboarding_tv_code_hint"
            android:ellipsize="end"
            android:background="@{@drawable/sel_onbarding_editext_focus}"
            android:inputType="text"
            android:layout_marginTop="24dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:paddingVertical="18dp"
            tools:text="@string/dummy"
            android:paddingStart="39dp"
            android:paddingEnd="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_warning" />

        <ImageView
            android:id="@+id/btn_code_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginEnd="18dp"
            android:visibility="@{vm._code.isBlank() ? View.GONE : View.VISIBLE}"
            android:background="@drawable/ic_onboarding_delete"
            app:layout_constraintBottom_toBottomOf="@+id/et_code"
            app:layout_constraintEnd_toEndOf="@id/et_code"
            app:layout_constraintTop_toTopOf="@+id/et_code" />

        <TextView
            android:id="@+id/tv_id_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="2dp"
            android:text="@string/onboarding_tv_code_error"
            android:textAppearance="?textAppearanceLabelLarge"
            android:textColor="@color/grayscales_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_code"
            app:layout_constraintTop_toBottomOf="@id/et_code" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_code_skip"
            android:layout_width="0dp"
            android:text="@string/onboarding_btn_code_skip"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/grayscales_200"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_code_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_code_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:clickable="@{!vm.isEmptyCode()}"
            android:paddingVertical="12dp"
            android:text="@string/code_complete"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="@{vm.isEmptyCode()? @color/black : @color/grayscales_700}"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@{vm.isEmptyCode()? @drawable/shape_grayscales800_fill_8_rect : @drawable/shape_yello_main_500_fill_black_line_rect}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>