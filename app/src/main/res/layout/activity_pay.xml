<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.el.yello.presentation.pay.PayViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pay_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintBottom_toBottomOf="@id/tv_pay_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_pay_title" />

            <TextView
                android:id="@+id/tv_pay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="1dp"
                android:paddingVertical="15dp"
                android:text="@string/profile_btn_shop"
                android:textAppearance="?textAppearanceSubtitle1"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_point_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_grayscales900_fill_22_rect"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_point"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/ic_yello_start_point" />

                <TextView
                    android:id="@+id/tv_point_amount"
                    style="@style/TextAppearance.Yello.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:paddingVertical="3dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:text="333" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_key_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@drawable/shape_grayscales900_fill_22_rect"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_point_amount"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_key"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/ic_key_1" />

                <TextView
                    android:id="@+id/tv_key_amount"
                    style="@style/TextAppearance.Yello.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:paddingVertical="3dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:text="333" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_pay_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="4dp"
                    android:text="@string/pay_title"
                    android:textAppearance="@style/TextAppearance.Yello.Headline03"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/dot_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="4dp"
                    app:ci_drawable="@drawable/vector_fill_white"
                    app:ci_drawable_unselected="@drawable/vector_fill_gray700"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vp_banner" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_purple_gradient_8dp"
                    app:layout_constraintTop_toBottomOf="@id/dot_indicator">

                    <TextView
                        android:id="@+id/tv_subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_subs_title"
                        android:textAppearance="@style/TextAppearance.Yello.Subtitle01"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@id/tv_discount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:lineHeight="14dp"
                        android:paddingVertical="2dp"
                        android:text="@string/pay_subs_subtitle"
                        android:textColor="@color/yello_main_500"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:paddingVertical="2dp"
                        android:text="@string/pay_subs_original_price"
                        android:textAppearance="@style/TextAppearance.Yello.LabelLarge"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/tv_price"
                        app:layout_constraintEnd_toStartOf="@id/tv_price" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:paddingVertical="2dp"
                        android:text="@string/pay_subs_price"
                        android:textAppearance="@style/TextAppearance.Yello.Subtitle01"
                        android:textColor="@color/yello_main_500"
                        app:layout_constraintBottom_toBottomOf="@id/tv_discount"
                        app:layout_constraintEnd_toStartOf="@id/tv_week" />

                    <TextView
                        android:id="@+id/tv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:paddingVertical="2dp"
                        android:text="@string/pay_subs_price_per"
                        android:textColor="@color/purple_sub_200"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_price"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/ic_special"
                    app:layout_constraintStart_toStartOf="@id/layout_subscribe"
                    app:layout_constraintTop_toTopOf="@id/layout_subscribe" />

                <com.el.yello.presentation.util.GradientStrokeButton
                    android:id="@+id/layout_show_subs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="9dp"
                    android:drawableStart="@drawable/ic_purple_star"
                    android:drawablePadding="4dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="7dp"
                    android:text="@string/pay_is_subs"
                    android:textAppearance="@style/TextAppearance.Yello.BodySmall"
                    android:textColor="@color/grayscales_100"
                    android:textSize="14dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_subscribe"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_yello_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:paddingVertical="3dp"
                    android:text="@string/pay_discount"
                    android:textAppearance="@style/TextAppearance.Yello.Headline03"
                    android:textColor="@color/yello_main_500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_show_subs" />

                <TextView
                    android:id="@+id/tv_yello_know"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="3dp"
                    android:text="@string/pay_subtitle"
                    android:textAppearance="@style/TextAppearance.Yello.Headline03"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_discount" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_name_check_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/shape_black_fill_purple_line_10_rect"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toStartOf="@id/layout_name_check_two"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_know">

                    <TextView
                        android:id="@+id/tv_check_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_in_app_one_title"
                        android:textColor="@color/purple_sub_100"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_original_price_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_in_app_one_original_price"
                        android:textColor="@color/grayscales_400"
                        android:textSize="11dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_one" />

                    <TextView
                        android:id="@+id/tv_price_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_purple_gradient_30dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="7dp"
                        android:text="@string/pay_in_app_one_price"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_original_price_one" />

                    <TextView
                        android:id="@+id/tv_discount_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/purple_sub_800"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:rotation="-3"
                        android:text="@string/pay_in_app_discount"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_original_price_one" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_key_one"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_key_1"
                    app:layout_constraintEnd_toEndOf="@id/layout_name_check_one"
                    app:layout_constraintStart_toStartOf="@id/layout_name_check_one"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_know" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_name_check_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/shape_black_fill_purple_line_10_rect"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toStartOf="@id/layout_name_check_five"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/layout_name_check_one"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_know">

                    <TextView
                        android:id="@+id/tv_check_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_in_app_two_title"
                        android:textColor="@color/purple_sub_100"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_original_price_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_in_app_two_original_price"
                        android:textColor="@color/grayscales_400"
                        android:textSize="11dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_two" />

                    <TextView
                        android:id="@+id/tv_price_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_purple_gradient_30dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="7dp"
                        android:text="@string/pay_in_app_two_price"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_original_price_two" />

                    <TextView
                        android:id="@+id/tv_discount_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/purple_sub_800"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:rotation="-3"
                        android:text="@string/pay_in_app_discount"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_original_price_two" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_key_two"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_key_2"
                    app:layout_constraintEnd_toEndOf="@id/layout_name_check_two"
                    app:layout_constraintStart_toStartOf="@id/layout_name_check_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_know" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_name_check_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shape_black_fill_purple_line_10_rect"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/layout_name_check_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_know">

                    <TextView
                        android:id="@+id/tv_check_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_in_app_five_title"
                        android:textColor="@color/purple_sub_100"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_original_price_five"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_in_app_five_original_price"
                        android:textColor="@color/grayscales_400"
                        android:textSize="11dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_check_five" />

                    <TextView
                        android:id="@+id/tv_price_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_purple_gradient_30dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="7dp"
                        android:text="@string/pay_in_app_five_price"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_original_price_five" />

                    <TextView
                        android:id="@+id/tv_discount_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/purple_sub_800"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:rotation="-3"
                        android:text="@string/pay_in_app_discount"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_original_price_five" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_key_five"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_key_5"
                    app:layout_constraintEnd_toEndOf="@id/layout_name_check_five"
                    app:layout_constraintStart_toStartOf="@id/layout_name_check_five"
                    app:layout_constraintTop_toBottomOf="@id/tv_yello_know" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_vote_for_point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_black_fill_purple_line_10_rect"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_name_check_one">

                    <ImageView
                        android:id="@+id/iv_vote_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp"
                        android:src="@drawable/ic_coin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_vote_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/font_pretendard_bold"
                        android:text="@string/pay_tv_vote_for_point"
                        android:textColor="@color/purple_sub_100"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_vote_coin"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_vote_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:text="@string/pay_tv_vote_for_point_reward"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_ad_for_point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_black_fill_purple_line_10_rect"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_vote_for_point">

                    <ImageView
                        android:id="@+id/iv_ad_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp"
                        android:src="@drawable/ic_coin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_ad_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/font_pretendard_bold"
                        android:paddingVertical="3dp"
                        android:text="@string/pay_tv_ad_for_point"
                        android:textColor="@color/purple_sub_100"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toTopOf="@id/tv_ad_time_available"
                        app:layout_constraintStart_toEndOf="@id/iv_ad_coin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_ad_time_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:text="@string/pay_tv_ad_for_point_time"
                        android:textColor="@color/yello_main_500"
                        android:textSize="11dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_ad_coin"
                        app:layout_constraintTop_toBottomOf="@id/tv_ad_title"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_ad_time_remain"
                        convertToMinAndSec="@{vm.leftTime}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:textColor="@color/yello_main_500"
                        android:textSize="11dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tv_ad_time_available"
                        app:layout_constraintStart_toEndOf="@id/iv_ad_coin"
                        app:layout_constraintTop_toTopOf="@id/tv_ad_time_available"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="59:20" />

                    <TextView
                        android:id="@+id/tv_ad_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:text="@string/pay_ad_vote_for_point_reward"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_pay_guide_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="2dp"
                    android:text="@string/pay_tv_guide_title"
                    android:textAppearance="@style/TextAppearance.Yello.LabelLarge"
                    android:textColor="@color/grayscales_300"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_ad_for_point" />

                <TextView
                    android:id="@+id/tv_pay_guide_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="2dp"
                    android:text="@string/pay_tv_guide_body_1"
                    android:textAppearance="@style/TextAppearance.Yello.LabelLarge"
                    android:textColor="@color/grayscales_300"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pay_guide_title" />

                <TextView
                    android:id="@+id/tv_pay_guide_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="2dp"
                    android:text="@string/pay_tv_guide_body_2"
                    android:textAppearance="@style/TextAppearance.Yello.LabelLarge"
                    android:textColor="@color/grayscales_300"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pay_guide_1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_btn_guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pay_guide_2">

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_guide"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_pay_guide_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="@string/pay_btn_guide_service"
                        android:textAppearance="@style/TextAppearance.Yello.LabelMedium"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/divider_guide"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_pay_guide_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="@string/pay_btn_guide_privacy"
                        android:textAppearance="@style/TextAppearance.Yello.LabelMedium"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/divider_guide"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pay_check_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_70"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_profile_loading"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_spinner_loading_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_ad_check_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_70"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_profile_ad_loading"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_spinner_loading_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>