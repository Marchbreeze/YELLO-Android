<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.yello.presentation.onboarding.activity.OnBoardingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/btn_gender_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_onboarding_btn_back"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="68dp"
            android:text="@string/onboarding_tv_gender"
            android:textAppearance="?textAppearanceHeadline2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_gender_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_gender_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/shape_grayscales900_fill_grayscales600_line_8_rect"
            android:drawablePadding="4dp"
            android:paddingHorizontal="70dp"
            android:paddingVertical="75dp"
            android:text="@string/onboarding_tv_gender_x"
            android:textAppearance="@style/TextAppearance.Yello.Subtitle02"
            android:textColor="@color/semantic_gender_m_500"
            app:layout_constraintBottom_toTopOf="@+id/btn_gender_y"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_onboarding_yello_face_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="170dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_onbarding_yello_face_f"
            app:layout_constraintBottom_toBottomOf="@+id/btn_gender_x"
            app:layout_constraintEnd_toEndOf="@+id/btn_gender_x"
            app:layout_constraintStart_toStartOf="@+id/btn_gender_x"
            app:layout_constraintTop_toTopOf="@+id/btn_gender_x" />

        <TextView
            android:id="@+id/tv_boy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/gender_male"
            android:textAlignment="center"
            android:textAppearance="?textAppearanceSubtitle2"
            android:textColor="@color/semantic_gender_m_500"
            app:layout_constraintBottom_toBottomOf="@+id/btn_gender_x"
            app:layout_constraintEnd_toEndOf="@+id/btn_gender_x"
            app:layout_constraintStart_toStartOf="@+id/btn_gender_x"
            app:layout_constraintTop_toBottomOf="@+id/iv_onboarding_yello_face_x" />

        <ImageView
            android:id="@+id/iv_boy_uncheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:src="@drawable/ic_onboarding_gender_unselect"
            app:layout_constraintBottom_toTopOf="@+id/iv_onboarding_yello_face_x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_gender_x" />

        <ImageButton
            android:id="@+id/btn_gender_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="118dp"
            android:background="@drawable/shape_grayscales900_fill_grayscales600_line_8_rect"
            android:drawablePadding="4dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="75dp"
            android:text="@string/onboarding_tv_gender_y"
            android:textAppearance="@style/TextAppearance.Yello.Subtitle02"
            android:textColor="@color/semantic_gender_f_500"
            app:layout_constraintBottom_toTopOf="@+id/btn_gender_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_onboarding_yello_face_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_onboarding_yello_face_m"
            app:layout_constraintBottom_toBottomOf="@+id/btn_gender_y"
            app:layout_constraintEnd_toEndOf="@+id/btn_gender_y"
            app:layout_constraintStart_toStartOf="@+id/btn_gender_y"
            app:layout_constraintTop_toTopOf="@+id/btn_gender_y" />

        <TextView
            android:id="@+id/tv_girl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/gender_female"
            android:textAlignment="center"
            android:textAppearance="?textAppearanceSubtitle2"
            android:textColor="@color/semantic_gender_f_500"
            app:layout_constraintBottom_toBottomOf="@+id/btn_gender_y"
            app:layout_constraintEnd_toEndOf="@+id/btn_gender_x"
            app:layout_constraintStart_toStartOf="@+id/btn_gender_x"
            app:layout_constraintTop_toBottomOf="@+id/iv_onboarding_yello_face_y" />

        <ImageView
            android:id="@+id/iv_girl_uncheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:src="@drawable/ic_onboarding_gender_unselect"
            app:layout_constraintBottom_toTopOf="@+id/iv_onboarding_yello_face_y"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_gender_y" />

        <android.widget.Button
            android:id="@+id/btn_gender_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/shape_black_fill_grayscales600_line_8_rect"
            android:backgroundTint="@color/grayscales_800"
            android:paddingVertical="12dp"
            android:text="@string/onboarding_btn_gender_done"
            android:clickable="@{!vm._gender.isEmpty()}"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="@color/grayscales_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>