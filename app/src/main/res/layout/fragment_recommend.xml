<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.main.recommend.RecommendFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingVertical="10dp"
            android:text="추천친구"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recommend_title"
            app:tabBackground="@drawable/sel_recommend_tab_indicator"
            app:tabIndicator="@drawable/sel_recommend_tab_indicator"
            app:tabIndicatorColor="@color/yello_main_500"
            app:tabIndicatorFullWidth="true"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/yello_main_500"
            app:tabTextAppearance="@style/TextAppearance.Yello.Subtitle02"
            app:tabTextColor="@color/grayscales_700">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카톡 친구들" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학교 친구들" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_invite_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_recommend">

            <ImageView
                android:id="@+id/iv_recommend_invite"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="17dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/img_banner_invite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recommend_invite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="3dp"
                android:text="친구 초대하기"
                android:textAppearance="@style/TextAppearance.Yello.BodyMedium"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/iv_recommend_invite"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recommend_invite_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="19dp"
                android:paddingVertical="2dp"
                android:text="찾는 친구가 없다면 친구를 초대해 보세요!"
                android:textAppearance="@style/TextAppearance.Yello.LabelMedium"
                android:textColor="@color/grayscales_600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_recommend_invite"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_invite_title" />

            <ImageView
                android:id="@+id/iv_recommend_invite_next"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="26dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>