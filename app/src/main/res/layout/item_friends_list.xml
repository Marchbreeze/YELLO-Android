<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:id="@+id/layout_profile_friend">

    <ImageView
        android:id="@+id/iv_profile_friend_item_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_main_yello_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_friend_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:paddingVertical="3dp"
        android:text="김옐로"
        android:textAppearance="@style/TextAppearance.Yello.Subtitle01"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/iv_profile_friend_item_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_friend_item_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="2dp"
        android:text="서울대학교 문헌정보학과 19학번"
        android:textAppearance="@style/TextAppearance.Yello.LabelMedium"
        android:textColor="@color/grayscales_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_profile_friend_item_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_friend_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>