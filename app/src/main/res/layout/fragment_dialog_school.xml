<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.yello.presentation.onboarding.activity.OnBoardingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_school_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rounded_dialog">

        <TextView
            android:id="@+id/tv_school_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/font_pretendard_bold"
            android:text="@string/onboarding_tv_search_school"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.ImageButton
            android:id="@+id/btn_back_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="13dp"
            android:background="@null"
            android:src="@drawable/ic_onboarding_x"
            app:layout_constraintBottom_toTopOf="@+id/et_school_search"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_school_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_grayscales900_fill_grayscales500_line_8_rect"
            android:drawableEnd="@drawable/ic_onboarding_search"
            android:drawablePadding="24dp"
            android:fontFamily="@font/font_pretendard_medium"
            android:inputType="text"
            android:maxLines="1"
            android:paddingVertical="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_school_dialog"
            tools:text="디자dfsdfsdfdsfsdfdsfsdfdsfsdfdsfsdsdfsdfsdfsdfsdfsdfs" />

        <TextView
            android:id="@+id/tv_school_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:fontFamily="@font/font_pretendard_medium"
            android:padding="12dp"
            android:text="@string/onboarding_tv_add_school"
            android:textColor="@color/grayscales_500"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_school_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_school_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_school_add"
            tools:listitem="@layout/item_school_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>